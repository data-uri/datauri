{
  "name": "datauri",
  "version": "0.8.0",
  "description": "A simple DataURI scheme module and client for Node.js",
  "scripts": {
    "test": "npm run check && npm run coveralls",
    "lint": "eslint src",
    "mocha": "mocha --compilers js:babel/register --recursive --ui bdd --timeout 3000 --reporter spec",
    "coverage-lcov": "mocha --compilers js:babel/register --recursive --ui bdd --timeout 3000 --reporter mocha-lcov-reporter --require blanket",
    "watch": "mocha --compilers js:babel/register --watch --recursive --ui bdd --timeout 3000 --reporter spec",
    "coverage-html": "touch test/coverage/results.html && mocha --recursive --ui bdd --timeout 3000 --reporter html-cov --require blanket > test/coverage/results.html",
    "coveralls": "npm run coverage-lcov | coveralls",
    "spec": "npm run mocha",
    "ci": "npm run coverage && npm run coveralls",
    "clean-deps": "rm -rf node_modules",
    "clean": "rm -rf dist",
    "fulltest": "npm run clean-deps && npm install && npm run build && npm run spec",
    "build": "npm run clean && mkdir -p dist && babel -d dist/ src/",
    "check": "npm run lint && npm run build && npm run spec",
    "preversion": "npm run check",
    "prepublish": "npm run check"
  },
  "dependencies": {
    "image-size": "^0.3.5",
    "mimer": "^0.2.1",
    "minimist": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/heldr/datauri.git"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "bin": {
    "datauri": "./bin/datauri"
  },
  "files": [
    "dist",
    "bin",
    "index.js"
  ],
  "keywords": [
    "datauri",
    "data uri",
    "data-uri",
    "optimization",
    "uri",
    "optimize",
    "inline",
    "png",
    "jpg",
    "woff",
    "base64"
  ],
  "author": "Helder Santana",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "blanket": "~1.1.6",
    "chai": "~1.9.0",
    "coveralls": "~2.8.0",
    "eslint": "^1.6.0",
    "mocha": "^1.21.5",
    "mocha-lcov-reporter": "0.0.1",
    "semver": "^5.0.3",
    "sinon": "~1.8.1"
  },
  "config": {
    "blanket": {
      "pattern": "datauri/dist/"
    }
  }
}
