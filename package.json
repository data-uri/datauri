{
  "name": "datauri",
  "version": "0.8.0",
  "description": "A simple Data URI scheme module and client for Node.js and io.js",
  "main": "datauri.js",
  "scripts": {
    "test": "npm run lint && npm run coveralls",
    "lint": "jshint datauri.js lib/* --config .jshintrc",
    "spec": "mocha --recursive --ui bdd --timeout 3000 --reporter spec",
    "dot": "mocha --recursive --ui bdd --timeout 3000 --reporter dot",
    "coverage-lcov": "mocha --recursive --ui bdd --timeout 3000 --reporter mocha-lcov-reporter --require blanket",
    "coverage-html": "touch test/coverage/results.html && mocha --recursive --ui bdd --timeout 3000 --reporter html-cov --require blanket > test/coverage/results.html",
    "coveralls": "npm run coverage-lcov | coveralls",
    "mocha": "npm run lint && npm run spec",
    "ci": "npm run lint && npm run coverage && npm run coveralls",
    "clean": "rm -rf node_modules",
    "fulltest": "npm run clean && npm install && npm run mocha"
  },
  "dependencies": {
    "mimer": "^0.2.1",
    "rsvp": "^3.0.16"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/heldr/datauri.git"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "bin": {
    "datauri": "./bin/datauri"
  },
  "keywords": [
    "datauri",
    "data uri",
    "data-uri",
    "optimization",
    "uri",
    "optimize",
    "inline",
    "png",
    "jpg",
    "woff",
    "base64"
  ],
  "author": "Helder Santana",
  "license": "MIT",
  "devDependencies": {
    "mocha": "~1.17.1",
    "chai": "~1.9.0",
    "jshint": "~2.4.3",
    "sinon": "~1.8.1",
    "mocha-lcov-reporter": "0.0.1",
    "blanket": "~1.1.6",
    "coveralls": "~2.8.0"
  },
  "config": {
    "blanket": {
      "pattern": "datauri/lib/"
    }
  }
}
